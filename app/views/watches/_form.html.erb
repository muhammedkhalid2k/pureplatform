<%= form_with(model: watch) do |form| %>
  <% if watch.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(watch.errors.count, "error") %> prohibited this watch from being saved:</h2>

      <ul>
        <% watch.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.select:user_id, User.all.pluck(:name,:id) %>
  </div>

  <div>
    <%= form.label :watch_name, style: "display: block" %>
    <%= form.text_field :watch_name %>
  </div>

  <div>
    <%= form.label :watch_color, style: "display: block" %>
    <%= form.text_field :watch_color %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
